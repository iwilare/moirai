\def\TL{(-0.25,+0.5)}
\def\TR{(+0.25,+0.5)}

\def\BL{(-0.25,-0.5)}
\def\BR{(+0.25,-0.5)}

\def\CL{(-0.25,0)}
\def\CR{(+0.25,0)}
