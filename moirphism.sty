\def\C{(0,0)}

\RenewDocumentCommand{\>}{}{%
    \stepcounter{moirphismi}%
    \setcounter{moirphismj}{0}%
}

% @height
% @width
\NewDocumentCommand{\wrapmoirphism}{m O{1} D<>{1}}{
    \ifodd #2 \def\offsety{0}
    \else     \def\offsety{(#2-1)/2} \fi
    \ifodd #3 \def\offsetx{0}
    \else     \def\offsetx{(#3-1)/2} \fi
    \begin{scope}[
        xshift= 0.5cm+1cm*(\themoirphismj + \offsetx),
        yshift=-0.5cm-1cm*(\themoirphismi + \offsety),
        xscale=#3,
        yscale={max(#2,2*#2-2)}]
        #1
    \end{scope}
    \addtocounter{moirphismj}{#3}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


% The empty diagram.
\RenewDocumentCommand{\_}{}{
    \wrapmoirphism{}
}
% The wire.
\RenewDocumentCommand{\~}{}{
    \wrapmoirphism{
        \draw[wire] \L -- \R;
    }
}
\NewDocumentCommand{\mor}{O{}O{}}{
    \wrapmoirphism{
        \draw[draw=none] \SW rectangle \NE;
        \draw[wire] \L -- \R;
        \node[tag, fill=#2, font=\tiny] at \C {$#1$};    
    }
}
\NewDocumentCommand{\mul}{m}{
    \wrapmoirphism{
        \draw[wire] \C -- \R;
        \draw[wire] \LU -| \CD -- \LD;
        \node[cdot=#1] at \C {};
    }
}
\NewDocumentCommand{\comul}{m}{
    \wrapmoirphism{
        \draw[wire] \RU -| \CD -- \RD;
        \draw[wire] \L -- \C;
        \node[cdot=#1] at \C {};
    }
}